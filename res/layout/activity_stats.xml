<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.conor.whichprep.StatsActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Practice Weak Preps"
        android:id="@+id/generalBtn"
        android:background="@drawable/stat_button"
        android:textColor="@color/background"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:onClick="startPracticeQuiz"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Level 1 Stats"
        android:id="@+id/lev1Btn"
        android:background="@drawable/stat_button"
        android:textColor="@color/background"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:onClick="showLevel1"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/generalBtn"
        android:layout_alignLeft="@+id/lev2Btn"
        android:layout_alignStart="@+id/lev2Btn" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Level 2 Stats"
        android:id="@+id/lev2Btn"
        android:background="@drawable/stat_button"
        android:textColor="@color/background"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:onClick="showLevel2"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/lev1Btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Level 3 Stats"
        android:id="@+id/lev3Btn"
        android:background="@drawable/stat_button"
        android:textColor="@color/background"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:onClick="showLevel3"
        android:layout_below="@+id/lev2Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Level 4 Stats"
        android:id="@+id/lev4Btn"
        android:background="@drawable/stat_button"
        android:textColor="@color/background"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:onClick="showLevel4"
        android:layout_below="@+id/lev3Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />
</RelativeLayout>
